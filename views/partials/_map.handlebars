                                <label>Plastics</label>
                            </div>
                            <div class="checkbox">
                                <input type="checkbox" value="Rechargeable Batteries" name="waste-type">
                                <label>Rechargeable Batteries</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
